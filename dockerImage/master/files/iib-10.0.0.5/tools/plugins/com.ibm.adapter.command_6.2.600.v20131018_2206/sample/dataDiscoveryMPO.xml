<?xml version="1.0" encoding="UTF-8"?>
<project name="Data Discovery (MPO)" default="default" xmlns:adapter="http://com.ibm.adapter">

	<property name="debug" value="true"/>
	<property name="srcProject" value="Sample"/>
	<property name="dstProject" value="Output"/>
	
 	<target name="default">
		<adapter:createProject projectName="${dstProject}" projectType="Java"/>
		<adapter:discover>
			<adapter:performImport agent="{com/ibm/adapter}MPOCobolDiscoveryAgent">
				<adapter:importResource>
					<adapter:propertyGroup name="CobolFileGroup">
						<adapter:propertyElement name="CobolFile" value="/${srcProject}/taderc99.ccp"/>
					</adapter:propertyGroup>
				</adapter:importResource>
				<adapter:queryProperties>
					<adapter:propertyGroup name="ImportProperties">
						<adapter:propertyElement name="Platform" value="Win32"/>
					</adapter:propertyGroup>
				</adapter:queryProperties>
				<adapter:queryResult>
					<adapter:selectElement name="DFHCOMMAREA"/>
				</adapter:queryResult>
			</adapter:performImport>
			<adapter:performImport agent="{com/ibm/adapter}MPOCobolDiscoveryAgent">
				<adapter:importResource>
					<adapter:propertyGroup name="CobolFileGroup">
						<adapter:propertyElement name="CobolFile" value="/${dstProject}/com/ibm/test/Taderc99.java"/>
					</adapter:propertyGroup>
				</adapter:importResource>
			</adapter:performImport>
			<adapter:performImport agent="{com/ibm/adapter}MPOCobolDiscoveryAgent">
				<adapter:importResource>
					<adapter:propertyGroup name="CobolFileGroup">
						<adapter:propertyElement name="CobolFile" value="D:\tadems23.ccp"/>
					</adapter:propertyGroup>
				</adapter:importResource>
				<adapter:queryProperties>
					<adapter:propertyGroup name="ImportProperties">
						<adapter:propertyElement name="Platform" value="Win32"/>
					</adapter:propertyGroup>
				</adapter:queryProperties>
				<adapter:queryResult>
					<adapter:selectElement name="DFHCOMMAREA"/>
					<adapter:selectElement name="DFHCOMMAREA/in1a/in1aa/in1bb"/>
				</adapter:queryResult>
			</adapter:performImport>
			<adapter:writeToWorkspace writer="{com/ibm/adapter/cobol/mpo/writer}JAVA_WRITER">
				<adapter:propertyGroup name="MPO_PG">
					<adapter:propertyElement name="Project Name" value="${dstProject}"/>
					<adapter:propertyTree name="MPO_TP">
						<adapter:propertyNode name="COBOLMPOToJavaResourceWriter">
							<adapter:propertyGroup name="Java Type Name">
								<adapter:propertyElement name="Overwrite existing class" value="true"/>
								<adapter:propertyElement name="Project Name" value="${dstProject}"/>
								<adapter:propertyElement name="Package Name" value="com.ibm.test"/>
								<adapter:propertyElement name="Class Name" value="Root"/>
							</adapter:propertyGroup>
							<adapter:propertyNode name="COBOLImportResult0">
								<adapter:propertyGroup name="COBOLToJavaResourceWriter">
									<adapter:propertyGroup name="Java Type Name">
										<adapter:propertyElement name="Overwrite existing class" value="true"/>
										<adapter:propertyElement name="Package Name" value="com.ibm.test"/>
										<adapter:propertyElement name="Class Name" value="Taderc99"/>
										<adapter:propertyElement name="GenerationStyle" value="Default"/>
									</adapter:propertyGroup>
								</adapter:propertyGroup>
							</adapter:propertyNode>
							<adapter:propertyNode name="COBOLImportResult1">
								<adapter:propertyGroup name="COBOLToJavaResourceWriter">
									<adapter:propertyGroup name="Java Type Name">
										<adapter:propertyElement name="Overwrite existing class" value="true"/>
										<adapter:propertyElement name="Package Name" value="com.ibm.test"/>
										<adapter:propertyElement name="Class Name" value="Tadems23_DFHCOMMAREA"/>
										<adapter:propertyElement name="GenerationStyle" value="Default"/>
									</adapter:propertyGroup>
								</adapter:propertyGroup>
							</adapter:propertyNode>
							<adapter:propertyNode name="COBOLImportResult2">
								<adapter:propertyGroup name="COBOLToJavaResourceWriter">
									<adapter:propertyGroup name="Java Type Name">
										<adapter:propertyElement name="Overwrite existing class" value="true"/>
										<adapter:propertyElement name="Package Name" value="com.ibm.test"/>
										<adapter:propertyElement name="Class Name" value="Tadems23_in1bb"/>
										<adapter:propertyElement name="GenerationStyle" value="Default"/>
									</adapter:propertyGroup>
								</adapter:propertyGroup>
							</adapter:propertyNode>
						</adapter:propertyNode>
					</adapter:propertyTree>
				</adapter:propertyGroup>
			</adapter:writeToWorkspace>
		</adapter:discover>
	</target>

</project>