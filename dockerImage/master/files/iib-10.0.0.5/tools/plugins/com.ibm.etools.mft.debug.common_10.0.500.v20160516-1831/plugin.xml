<!-- WBI propertyPages -->
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            objectClass="com.ibm.etools.mft.debug.common.breakpoint.WBIBreakpoint"
            adaptable="true"
            name="%commonPage.label"
            class="com.ibm.etools.mft.debug.common.ui.propertypages.WBIBreakpointPage"
            id="com.ibm.etools.mft.debug.common.ui.propertypages.common">
      </page>
      <page
            objectClass="com.ibm.etools.mft.debug.common.breakpoint.WBIBreakpoint"
            adaptable="true"
            name="%filteringPage.label"
            class="com.ibm.etools.mft.debug.common.ui.propertypages.WBIBreakpointAdvancedPage"
