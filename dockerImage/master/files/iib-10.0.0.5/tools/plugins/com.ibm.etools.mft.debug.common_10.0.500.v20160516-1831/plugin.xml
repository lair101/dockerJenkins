<!-- Extension point for registering debug helper 									-->
<!-- ==============================================================================	-->
   <extension-point id="CommonDebugAdapter" name="%CommonDebugAdapterExtensionName"/>
   <extension-point id="FileChangedListener" name="FileChangedListener" schema="schema/FileChangedListener.exsd"/>
   <extension-point id="PreferencePageContents" name="PreferencePageContents" schema="schema/PreferencePageContents.exsd"/>

<!-- Presentation Services -->
   <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="com.ibm.etools.mft.debug.common.cda.core.CDAModelPresentation"
            id="com.ibm.etools.mft.debug.common.cda">
      </debugModelPresentation>
   </extension>
   <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="com.ibm.etools.mft.debug.common.core.WBIModelPresentation"
            id="com.ibm.etools.mft.debug.common.wbi">
      </debugModelPresentation>
   </extension>
   <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="com.ibm.etools.mft.debug.common.sim.SimModelPresentation"
            id="com.ibm.etools.mft.debug.common.sim">
      </debugModelPresentation>
   </extension>
   <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="com.ibm.etools.mft.debug.common.sourcedebug.SourceModelPresentation"
            id="com.ibm.etools.mft.debug.common.source">
      </debugModelPresentation>
   </extension>
      
<!-- WSA Debug Element extension -->
	<extension
         point="com.ibm.debug.wsa.javaDebugWrappers">
      <javaDebugWrappers
            name="CDA Plug-in"
            debugTarget="com.ibm.etools.mft.debug.common.cda.core.CDADebugTarget"
            sourceLocator="com.ibm.etools.mft.debug.common.cda.core.CDASourceLocator"
            id="com.ibm.etools.mft.debug.common.cda">
      </javaDebugWrappers>
   </extension>
   
<!-- WSA Thread Filter extension -->
	<extension
         point="com.ibm.debug.wsa.threadFilters">
      <threadFilter
            id="com.ibm.etools.mft.debug.common.cda.thread_filter"
            className="com.ibm.etools.mft.debug.common.cda.core.CDAThread"
            label="WBI Thread Filter"
            enabled="true">
      </threadFilter>
   </extension>

<!-- WBI Breakpoint and marker declaration -->
  <extension
         id="generalBreakpointMarker"
         name="%GENERAL_BREAKPOINT_MARKER"
         point="org.eclipse.core.resources.markers">
      	<super type="org.eclipse.debug.core.breakpointMarker"/> 
		<attribute name="pluginId"/>
		<attribute name="version"/>
		<!--<attribute name="active"/>-->
		<attribute name="breakpointLabel"/>
		<attribute name="deployedType"/>
		<attribute name="image"/>
		<!--<attribute name="installed"/>-->
   </extension>
   <extension
         id="wbiBreakpointMarker"
         name="%WBI_BREAKPOINT_MARKER"
         point="org.eclipse.core.resources.markers">
      	<super type="com.ibm.etools.mft.debug.common.generalBreakpointMarker"/>
      	<super type="com.ibm.wbit.visual.utils.graphicalMarker"/> 
		<attribute name="condition"/>
		<attribute name="conditionEnabled"/>
		<attribute name="conditionSuspendOnTrue"/>
		<attribute name="hitCount"/>
		<attribute name="isLocal"/>
		<attribute name="suspendPolicy"/>
   </extension>
   <extension
         id="wbiGlobalBreakpointMarker"
         name="%WBI_GLOBAL_BREAKPOINT_MARKER"
         point="org.eclipse.core.resources.markers">
      	<super type="com.ibm.etools.mft.debug.common.wbiBreakpointMarker"/>
      	<persistent value="true"/>
   </extension>
   <extension
         id="wbiJavaBreakpointMarker"
         name="%WBI_JAVA_BREAKPOINT_MARKER"
         point="org.eclipse.core.resources.markers">
      	<super type="com.ibm.etools.mft.debug.common.wbiBreakpointMarker"/>
   </extension>
   <extension
         id="wbiJavaGlobalBreakpointMarker"
         name="%WBI_JAVA_GLOBAL_BREAKPOINT_MARKER"
         point="org.eclipse.core.resources.markers">
      	<super type="com.ibm.etools.mft.debug.common.wbiJavaBreakpointMarker"/>
      	<persistent value="true"/>
   </extension>
   <!-- WBI breakpoint -->
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            markerType="com.ibm.etools.mft.debug.common.wbiGlobalBreakpointMarker"
            class="com.ibm.etools.mft.debug.common.breakpoint.WBIBreakpoint"
            id="com.ibm.etools.mft.debug.common.breakpoint.WBIBreakpoint">
      </breakpoint>
   </extension>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            markerType="com.ibm.etools.mft.debug.common.wbiJavaGlobalBreakpointMarker"
            class="com.ibm.etools.mft.debug.common.breakpoint.WBIJavaBreakpoint"
            id="com.ibm.etools.mft.debug.common.breakpoint.WBIJavaBreakpoint">
      </breakpoint>
   </extension>
<!-- WBI source Breakpoint and marker declaration -->
   <extension
         id="sourceBreakpointMarker"
         name="%WBI_SOURCE_BREAKPOINT_MARKER"
         point="org.eclipse.core.resources.markers">
      	<super type="com.ibm.etools.mft.debug.common.wbiBreakpointMarker"/>         
     	<super type="com.ibm.wbit.visual.utils.textMarker"/>
		<attribute name="sourceObjectName"/>
		<attribute name="sourceType"/>
      <persistent value="true"/>
   </extension>
   <extension
         id="sourceLineBreakpointMarker"
         name="%WBI_SOURCE_LINE_BREAKPOINT_MARKER"
         point="org.eclipse.core.resources.markers">
      <super type="com.ibm.wbit.visual.utils.javaLineBreakpointMarker"/>
      <super type="com.ibm.etools.mft.debug.common.sourceBreakpointMarker"/>
      <persistent value="true"/>
   </extension>
   <!-- WBI source breakpoint -->
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            markerType="com.ibm.etools.mft.debug.common.sourceLineBreakpointMarker"
            class="com.ibm.etools.mft.debug.common.sourcedebug.SourceLineBreakpoint"
            id="com.ibm.etools.mft.debug.common.sourcedebug.SourceLineBreakpoint">
      </breakpoint>
   </extension>
 
