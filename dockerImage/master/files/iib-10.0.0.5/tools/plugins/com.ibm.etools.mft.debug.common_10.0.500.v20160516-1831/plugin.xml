<!-- Common debug Preference Page -->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%Preference.Debug"
            class="com.ibm.etools.mft.debug.common.ui.CommonDebugPreferencePage"
            category="com.ibm.etools.mft.flow.preference.broker"
            id="com.ibm.etools.mft.debug.common.ui.preferences">
      </page>
   </extension>
   <!-- Add items to the preference page -->
   <extension
         point="com.ibm.etools.mft.debug.common.PreferencePageContents">
         <contents
		        id="com.ibm.etools.mft.debug.common.HCRWarnings"
         		type="CHECK"
         		label="%PREF_HCRDIALOG"
         		group = "1"
         		default_value="false">
         </contents>
   </extension>

   <extension
         point="com.ibm.etools.mft.debug.common.PreferencePageContents">
         <contents
		        id="com.ibm.etools.mft.debug.common.refactoringWarnings"
         		type="CHECK"
         		label="%PREF_REFACTORING"
         		group = "1"
         		default_value="false">
         </contents>
   </extension>
   
      <extension
         point="com.ibm.etools.mft.debug.common.PreferencePageContents">
         <contents
		        id="com.ibm.etools.mft.debug.common.OutOfSyncWarnings"
         		type="CHECK"
         		label="%PREF_OUTOFSYNCDIALOG"
         		group = "1"
         		default_value="false">
         </contents>
   </extension>

      <extension
         point="com.ibm.etools.mft.debug.common.PreferencePageContents">
         <contents
		        id="com.ibm.etools.mft.debug.common.NoSMAPWarnings"
         		type="CHECK"
         		label="%PREF_NOSMAPDIALOG"
         		group = "1"
         		default_value="false">
         </contents>
   </extension>
   
   
      <extension
         point="com.ibm.etools.mft.debug.common.PreferencePageContents">
         <contents
		        id="com.ibm.etools.mft.debug.common.AlwaysAskForFileSelection"
         		type="CHECK"
         		label="%PREF_ALWAYS_ASK_SELECTFILE_DIALOG"
         		group = "1"
         		default_value="false">
         </contents>
   </extension>
   
      
      <extension
         point="com.ibm.etools.mft.debug.common.PreferencePageContents">
         <contents
		        id="com.ibm.etools.mft.debug.common.RemoveInvalidBreakpoint"
         		type="STANDARD_RADIO"
         		label="%PREF_ALWAYS_REMOVE_INVALID_BP_DIALOG"
         		group = "1"
         		default_value="ALWAYS">
         </contents>
   </extension>
   
         
      <extension
         point="com.ibm.etools.mft.debug.common.PreferencePageContents">
         <contents
		        id="com.ibm.etools.mft.debug.common.ShowAllVariables"
         		type="CHECK"
         		label="%PREF_SHOW_ALL_VARIABLE"
         		group = "1"
         		default_value="false">
         </contents>
   </extension>
