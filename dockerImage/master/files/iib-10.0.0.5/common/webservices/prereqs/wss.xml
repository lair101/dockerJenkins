<module name="wss" class="com.ibm.ws.wssecurity.WSSecurityModule">
    <InFlow>
        <handler name="SecurityConsumerHandler" class="com.ibm.ws.wssecurity.handler.WSSecurityConsumerHandler">
            <order phase="Security" phaseFirst="true"/>
        </handler>
    </InFlow>

    <OutFlow>
        <handler name="SecurityGeneratorHandler" class="com.ibm.ws.wssecurity.handler.WSSecurityGeneratorHandler">
            <order phase="Security" phaseLast="true"/>
        </handler>
    </OutFlow>
    
    
</module>